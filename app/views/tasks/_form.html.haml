=form_for @task do |f|
  -if @task.errors.any?
    #error_explanation
      %h2="#{pluralize(@task.errors.count, "error")} prohibited this task from being saved:"
      %ul
        -@task.errors.full_messages.each do |msg|
          %li= msg

  .field
    =f.label :name
    =f.text_field :name
  .field
    =f.label :completed
    -if @form_type == "edit"
      =f.check_box :completed
    -else
      =f.check_box :completed, disabled: true
    .radio
      %label Lists
      %br
      - if @lists.empty?
        ="Create a list to start a task!"
      -else
        -@lists.each do |list|
          =f.radio_button :list_id, list.id, {:checked => true}
          =f.label :list_id, list.name
  .actions
    -if @form_type =="edit"
      =f.submit 'Update'
    -else
      =f.submit 'Save'
