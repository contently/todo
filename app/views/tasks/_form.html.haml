=form_for @task do |f|
  -if @task.errors.any?
    #error_explanation
      %h2="#{pluralize(@task.errors.count, "error")} prohibited this task from being saved:"
      %ul
        -@task.errors.full_messages.each do |msg|
          %li= msg
  .field
    =f.label :name
    =f.text_field :name
  -# Only show completed checkbox if using the 'edit' action, default will be false in controller
  -if params[:action] === "edit"
    .field
      =f.label :completed
      =f.check_box :completed
  .actions
    =f.submit 'Save'
