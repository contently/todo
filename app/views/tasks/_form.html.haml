=form_for ([@list, @task]) do |f|
  -if @task.errors.any?
    #error_explanation
      %h2="#{pluralize(@task.errors.count, "error")} prohibited this task from being saved:"
      %ul
        -@task.errors.full_messages.each do |msg|
          %li= msg

  = f.hidden_field :list_id, value: @task.list_id
  .field
    =f.label :name
    =f.text_field :name
  -if !@task.new_record?
    .field
      =f.label :completed
      =f.check_box :completed
  .actions
    =f.submit 'Save'
