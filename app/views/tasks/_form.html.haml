=form_for @task do |f|
  -if @task.errors.any?
    #error_explanation
      %h2="#{pluralize(@task.errors.count, "error")} prohibited this task from being saved:"
      %ul
        -@task.errors.full_messages.each do |msg|
          %li= msg

  .field
    =f.label :name
    =f.text_field :name
  .field
    =f.label :completed
    -if @form_type == "edit"
      =f.check_box :completed
    -else
      =f.check_box :completed, disabled: true
    .radio
      %label Lists
      %br
      -@lists.each do |list|
        =f.radio_button :list_id, list.id
        =f.label :list_id, list.name
  .actions
    =f.submit 'Save'
