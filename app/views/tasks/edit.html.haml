%h1 Editing task

=form_for [@list, @task] do |f|
  -if @task.errors.any?
    #error_explanation
      %h2="#{pluralize(@task.errors.count, "error")} prohibited this task from being saved:"
      %ul
        -@task.errors.full_messages.each do |msg|
          %li= msg

  .field
    =f.label :name
    =f.text_field :name
  .field
    =f.label :completed
    =f.check_box :completed, {}, true, false

  .actions
    =f.submit 'Save'

=link_to 'Show', list_task_path(@task)
\|
=link_to 'Back', list_tasks_path
