%h1 Tasks

-# %span=link_to 'Home', root_path
%span=link_to 'All', tasks_path
%span=link_to 'Done', tasks_done_path
%span=link_to 'Incomplete', tasks_incomplete_path
%br
%br

%table
  %thead
    %tr
      %th Name
      %th Completed
      %th List ID
      %th List Name
      %th
      %th
      %th

  %tbody
    - @tasks.each do |task|
      %tr
        %td=task.name
        %td=task.completed
        %td=task.list ? task.list.id : 'list.id'
        %td=task.list ? task.list.name : 'list.name'
        %td=link_to 'Show', task
        %td=link_to 'Edit', edit_task_path(task)
        %td=link_to 'Destroy', task, :method => :delete, :data => { :confirm => 'Are you sure?' }

%br

=link_to 'Add a task', new_task_path

%br

=link_to 'Add a list', new_list_path

%br

%p="Total lists: #{List.all.length}"
