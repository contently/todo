%h1 Tasks

%table
  %thead
    %tr
      %th Name
      %th Completed
      %th
      %th
      %th

  %tbody
    - @tasks.each do |task|
      %tr
        %td=task.name
        %td=task.completed
        %td=link_to 'Show', list_task_path(@list, task)
        %td=link_to 'Edit', edit_list_task_path(@list, task)
        %td=link_to 'Destroy', list_task_path(@list, task), :method => :delete, :data => { :confirm => 'Are you sure?' }

%br

=link_to 'Add a task', new_list_task_path
