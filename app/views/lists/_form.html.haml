= form_for @list do |f|
  - if @list.errors.any?
    #error_explanation
      %h2= "#{pluralize(@list.errors.count, "error")} prohibited this list from being saved:"
      %ul
        - @list.errors.full_messages.each do |msg|
          %li= msg

  -# HW5: save currently logged in user
  =f.hidden_field :user_id, :value => @current_user.id

  .field
    = f.label :name
    = f.text_field :name
  .actions
    = f.submit 'Save'
