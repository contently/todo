=form_for @list do |f|
  -if @list.errors.any?
    #error_explanation
      %h2="#{pluralize(@list.errors.count, "error")} prohibited this task from being saved:"
      %ul
        -@list.errors.full_messages.each do |msg|
          %li= msg

  .field
    =f.label :name
    =f.text_field :name
  .actions
    =f.submit 'Save'
