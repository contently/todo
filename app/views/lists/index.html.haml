%h1 Listing lists

%table
  %thead
    %tr
      %th
      %th
      %th

  %tbody
    - @lists.each do |list|
      %tr
        %td=list.name
        %td= link_to 'Show', list
        %td= link_to 'Edit', edit_list_path(list)
        %td= link_to 'Destroy', list, method: :delete, data: { confirm: 'Are you sure?' }
        %td= link_to 'Add Task', new_task_path(:list_id => list.id)


