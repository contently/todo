%h1 Lists
- @lists.each do |list|
  .card{ class: "list-#{list.id}" }
    .card-header
      %h2= list.name
      .card-actions
        = link_to edit_list_path(list), class: "link-edit" do
          %i.bi.bi-pencil
        = link_to list, method: :delete, data: { confirm: 'Are you sure?' }, class: "link-delete" do
          %i.bi.bi-trash
    .tasks
      = render collection: list.tasks, partial: "lists/task", as: :task

= link_to 'New List', new_list_path, class: "btn"
